        <record id="crm_case_form_view_ipe" model="ir.ui.view">
            <field name="name">crm.lead.ipe.inherited.crm</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='lead_partner']" position="after">
                     <group>
                         <field name="monto_en_dolares"></field>
                         <field name="moneda_de_oferta"></field>
                         <field name="secondary_currency" invisible="1"></field>
                         <field name="nombre_completo_propuesta"></field>
                         <field name="codigo_de_entidad"></field>
                         <field name="tipo_de_contrato"></field>
                         <field name="metodo_seleccion"></field>
                         <field name="tipo_invitacion"></field>

                     </group>
                    <group>
                        <field name="solicitud_boleta"></field>
                        <field name="boleta_garantia"></field>
<!--                        <field name="monto_boleta"></field>-->
<!--                        <field name="moneda_boleta"/>-->
                    </group>
                </xpath>
                <xpath expr="//field[@name='team_id']" position="replace">
                    <field name="team_id" invisible="1" widget="selection" domain="['|', ('company_id', '=', False), ('company_id', '=', company_id)]"/>
                </xpath>

            </field>

        </record>

</odoo>
